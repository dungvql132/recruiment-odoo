<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_department_part_form" model="ir.ui.view">
            <field name="name">hr.department.part.form</field>
            <field name="model">hr.department.part</field>
            <field name="arch" type="xml">
                <form string="Department Part">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="company_id" options="{'no_create': True}"/>
                        </group>
                    </sheet>
<!--                    <div class="oe_chatter">-->
<!--                        <field name="message_follower_ids" groups="base.group_user"/>-->
<!--                        <field name="message_ids"/>-->
<!--                    </div>-->
                </form>
            </field>
        </record>

        <record id="view_hr_department_part_tree" model="ir.ui.view">
            <field name="name">hr.department.part.tree</field>
            <field name="model">hr.department.part</field>
            <field name="arch" type="xml">
                <tree string="Department Part" sample="1">
                    <field name="name"/>
<!--                    <field name="company_id" groups="base.group_multi_company"/>-->
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="hr_department_part_tree_action" model="ir.actions.act_window">
            <field name="name">Departments Part</field>
            <field name="res_model">hr.department.part</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref=""/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new department part
                </p>
            </field>
        </record>

        <menuitem
                id="menu_hr_department_kanban_menu"
                name="Department"
                action="hr.hr_department_tree_action"
                parent="hr.menu_hr_department_kanban"
                groups="hr.group_hr_user"/>

        <menuitem
                id="menu_hr_department_part"
                name="Department Part"
                action="hr_department_part_tree_action"
                parent="hr.menu_hr_department_kanban"
                groups="hr.group_hr_user"/>
    </data>
</odoo>
