<odoo>
    <record model="ir.ui.view" id="hr_applicant_view_new_form">
        <field name="name">Jobs - Recruitment Form</field>
        <field name="model">hr.applicant</field>
        <field name="active">True</field>
        <field name="arch" type="xml">
            <form string="Jobs - Recruitment Form" class="o_applicant_form">
                <header>
                    <field name="stage_id" widget="statusbar" options="{'fold_field': 'fold'}"
                           attrs="{'invisible': [('active', '=', False)]}"/>
                </header>
                <sheet>
                    <field name="active" invisible="1"/>
                    <field name="legend_normal" invisible="1"/>
                    <field name="legend_blocked" invisible="1"/>
                    <field name="legend_done" invisible="1"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h2 class="o_row">
                            <div>
                                <label for="partner_name" class="oe_edit_only"/>
                                <field name="partner_name"/>
                            </div>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" invisible="1"/>
                            <field name="refuse_reason_id" attrs="{'invisible': [('active', '=', True)]}"/>
                            <field name="email_from" widget="email"/>
                            <field name="partner_phone" widget="phone"/>
                            <field name="partner_mobile" widget="phone"/>
                            <field name="type_id" placeholder="Degree"/>
                        </group>
                        <group>
                            <field name="categ_ids" widget="many2many_tags"
                                   options="{'color_field': 'color', 'no_create_edit': True}"/>
                            <field name="recruiter_id" domain="[('active', '!=', False)]"/>
                            <field name="priority" widget="priority"/>
                            <field name="source_id"/>
                        </group>
                        <group string="Job">
                            <field name="job_id"/>
                            <field name="department_id"/>
                            <field name="company_id" groups="base.group_multi_company" options='{"no_open":True}'/>
                        </group>
                    </group>
                    <div class="o_horizontal_separator">RR Applicant Request</div>
                    <div class="o_horizontal_separator">
                        <button name="popup_add_new_rr_applicant" type="object"
                                string="Create RR Applicant Request"
                                class="btn btn-primary"/>
                    </div>
                    <field name="rr_applicant_ids">
                        <tree create="0" edit="0">
                            <field name="applicant_id"/>
                            <field name="stage_id"/>
                            <field name="note"/>

                            <field name="interview_answer_id" invisible="1"/>
                            <field name="offer_id" invisible="1"/>
                            <field name="state" invisible="1"/>

                            <button name="create_interview_answer" type="object"
                                string="Create Interview Answer"
                                class="btn btn-primary"
                                attrs="{'invisible':
                                ['|',
                                ('interview_answer_id','!=',False),
                                ('state','!=','Inprocessing')
                                ]}"/>
                            <button name="view_interview_answer" type="object"
                                string="View Interview Answer"
                                class="btn btn-primary"
                                attrs="{'invisible':[('interview_answer_id','=',False)]}"/>
                            <button name="create_offer" type="object"
                                string="Create Offer"
                                class="btn btn-primary"
                                attrs="{'invisible':[
                                '|',
                                ('offer_id','!=',False),
                                ('state','!=','Interviewed')
                                ]}"/>
                            <button name="view_offer" type="object"
                                string="View Offer"
                                class="btn btn-primary"
                                attrs="{'invisible':[
                                ('offer_id','=',False)
                                ]}"/>
                            <button name="action_accept_ol" type="object"
                                string="Accept OL"
                                class="btn btn-primary"
                                attrs="{'invisible':[
                                '&amp;',
                                '|',
                                ('offer_id','=',False),
                                ('state','=','On Board'),
                                ('state','!=','Accept OL')
                                ]}"/>
                            <button name="action_reject_ol" type="object"
                                string="Reject OL"
                                class="btn btn-primary"
                                attrs="{'invisible':[
                                '&amp;',
                                '|',
                                ('offer_id','=',False),
                                ('state','=','On Board'),
                                ('state','!=','Reject OL')
                                ]}"/>
                            <button name="action_on_board" type="object"
                                string="On Board"
                                class="btn btn-primary"
                                attrs="{'invisible':[
                                '|',
                                ('offer_id','=',False),
                                ('state','!=','Accept OL')
                                ]}"/>
                            <button name="action_to_reviewing" type="object"
                                string="Submit"
                                class="btn btn-primary"
                                attrs="{'invisible':[('state','!=','Draft')]}"
                            />
                        </tree>
                    </field>
                    <div class="o_horizontal_separator">Interview Meeting</div>
                    <div class="o_horizontal_separator">
                        <button name="popup_add_new_rr_meeting" type="object"
                                string="Create Interview Meeting"
                                class="btn btn-primary"/>
                    </div>
                    <field name="interview_meeting_ids">
                        <tree create="0" edit="0">
                            <field name="rr_applicant_id"/>
                            <field name="state"/>
                            <field name="interview_date"/>
                            <field name="interviewer_ids" widget="many2many_tags"/>
                            <field name="note"/>
                            <button name="action_cancel_interview" type="object"
                                string="Cancel"
                                class="btn btn-primary"
                                attrs="{'invisible':[('state','!=','waiting')]}"
                            />
                            <button name="action_finish_interview" type="object"
                                string="Finish"
                                class="btn btn-primary"
                                attrs="{'invisible':[('state','!=','waiting')]}"
                            />
                        </tree>
                    </field>
                    <separator string="Application Summary"/>
                    <field name="description" placeholder="Feedback of interviews..."/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" options="{'open_attachments': True}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hr_recruitment.action_hr_sec_form_view_act_job" model="ir.actions.act_window.view">
        <field name="view_id" ref="hr_applicant_view_new_form"/>
    </record>

</odoo>