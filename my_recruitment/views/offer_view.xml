<odoo>
    <record id="offer_request_tree" model="ir.ui.view">
        <field name="name">offer.request.tree</field>
        <field name="model">offer.request</field>
        <field name="active">False</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="min_salary"/>
                <field name="max_salary"/>
                <field name="skill_id"/>
                <field name="skill_level_id"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record id="offer_request_form" model="ir.ui.view">
        <field name="name">offer.request.form</field>
        <field name="model">offer.request</field>
        <field name="active">False</field>
        <field name="arch" type="xml">
            <form string="Skill Type">
                <field name="id" invisible="1"/>
                <header>

                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="note"/>
                    </group>
                    <group>
                        <field name="min_salary"/>
                        <field name="max_salary"/>
                    </group>
                    <group>
                        <field name="skill_id"/>
                        <field name="skill_level_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="offer_request_action" model="ir.actions.act_window">
        <field name="name">Offer</field>
        <field name="res_model">offer.request</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('offer_request_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('offer_request_form')})]"/>
    </record>
</odoo>