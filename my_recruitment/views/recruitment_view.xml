<odoo>
    <record model="ir.ui.view" id="recruitment_request_tree_view">
        <field name="name">Recruitment Request Tree</field>
        <field name="model">recruitment.request</field>
        <field name="arch" type="xml">
            <tree string="Recruitment Request">
                <field name="name"/>
                <field name="expect_quantity"/>
                <field name="remain_quantity"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="recruitment_request_form_view">
        <field name="name">Recruitment Request Form</field>
        <field name="model">recruitment.request</field>
        <field name="arch" type="xml">
            <form string="Recruitment Request">
                <header>
                    <button name="popup_change_state_rr" type="object" string="Change State"
                            attrs = "{'invisible':[('state','in',['draft','submitted'])]}"/>
                    <button name="action_submit" type="object" string="Submit"
                            attrs = "{'invisible':[('state','!=','draft')]}"/>
                    <button name="action_approve" type="object" string="Approve"
                            attrs = "{'invisible':[('state','!=','submitted')]}"/>
                    <button name="action_reject" type="object" string="Approve"
                            attrs = "{'invisible':[('state','!=','submitted')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="expect_quantity" readonly="1"/>
                        <field name="ob_quantity" readonly="1"/>
                        <field name="remain_quantity" readonly="1"/>
                        <field name="approved_date" readonly="1"/>
                        <field name="recruiter_ids" widget="many2many_tags"/>
                    </group>
                    <div class="o_horizontal_separator">Expect Applicant</div>
                    <field name="expect_applicant_ids">
                        <tree editable="top">
<!--                            <field name="name"/>-->
                            <field name="skill_type_id"/>
                            <field name="skill_id"/>
                            <field name="expect_quantity"/>
                            <field name="ob_quantity" readonly="1"/>
                            <field name="remain_quantity" readonly="1"/>
                        </tree>
                    </field>
                    <div class="o_horizontal_separator">RR Applicant Request</div>
                    <div class="o_horizontal_separator">
                        <button name="popup_add_new_rr_applicant" type="object"
                                string="Create RR Applicant Request"
                                class="btn btn-primary"
                                attrs="{'invisible':[('state','!=','opening')]}"/>
                    </div>
                    <field name="rr_applicant_ids">
                        <tree create="0" edit="0">
                            <field name="applicant_id"/>
                            <field name="stage_id"/>
                            <field name="note"/>

                            <field name="interview_answer_id" invisible="1"/>
                            <field name="offer_id" invisible="1"/>
                            <field name="state" invisible="1"/>

                            <button name="create_interview_answer" type="object"
                                string="Create Interview Answer"
                                class="btn btn-primary"
                                attrs="{'invisible':
                                ['|',
                                ('interview_answer_id','!=',False),
                                ('state','!=','Inprocessing')
                                ]}"/>
                            <button name="view_interview_answer" type="object"
                                string="View Interview Answer"
                                class="btn btn-primary"
                                attrs="{'invisible':[('interview_answer_id','=',False)]}"/>
                            <button name="create_offer" type="object"
                                string="Create Offer"
                                class="btn btn-primary"
                                attrs="{'invisible':[
                                '|',
                                ('offer_id','!=',False),
                                ('state','!=','Interviewed')
                                ]}"/>
                            <button name="view_offer" type="object"
                                string="View Offer"
                                class="btn btn-primary"
                                attrs="{'invisible':[
                                ('offer_id','=',False)
                                ]}"/>
                            <button name="action_accept_ol" type="object"
                                string="Accept OL"
                                class="btn btn-primary"
                                attrs="{'invisible':[
                                '&amp;',
                                '|',
                                ('offer_id','=',False),
                                ('state','=','On Board'),
                                ('state','!=','Accept OL')
                                ]}"/>
                            <button name="action_reject_ol" type="object"
                                string="Reject OL"
                                class="btn btn-primary"
                                attrs="{'invisible':[
                                '&amp;',
                                '|',
                                ('offer_id','=',False),
                                ('state','=','On Board'),
                                ('state','!=','Reject OL')
                                ]}"/>
                            <button name="action_on_board" type="object"
                                string="On Board"
                                class="btn btn-primary"
                                attrs="{'invisible':[
                                '|',
                                ('offer_id','=',False),
                                ('state','!=','Accept OL')
                                ]}"/>
                            <button name="action_to_reviewing" type="object"
                                string="Submit"
                                class="btn btn-primary"
                                attrs="{'invisible':[('state','!=','Draft')]}"
                            />
                        </tree>
                    </field>
                    <div class="o_horizontal_separator">Interview Meeting</div>
                    <div class="o_horizontal_separator">
                        <button name="popup_add_new_rr_meeting" type="object"
                                string="Create Interview Meeting"
                                class="btn btn-primary"
                                attrs="{'invisible':[('state','!=','opening')]}"/>
                    </div>
                    <field name="interview_meeting_ids">
                        <tree create="0" edit="0">
                            <field name="rr_applicant_id"/>
                            <field name="state"/>
                            <field name="interview_date"/>
                            <field name="interviewer_ids" widget="many2many_tags"/>
                            <field name="note"/>
                            <button name="action_cancel_interview" type="object"
                                string="Cancel"
                                class="btn btn-primary"
                                attrs="{'invisible':[('state','!=','waiting')]}"
                            />
                            <button name="action_finish_interview" type="object"
                                string="Finish"
                                class="btn btn-primary"
                                attrs="{'invisible':[('state','!=','waiting')]}"
                            />
                        </tree>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_recruitment_request">
        <field name="name">Recruitment Request</field>
        <field name="res_model">recruitment.request</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('recruitment_request_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('recruitment_request_form_view')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new Recruitment Request?
            </p>
        </field>
    </record>
</odoo>