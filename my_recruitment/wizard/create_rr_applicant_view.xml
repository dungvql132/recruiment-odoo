<odoo>
    <record model="ir.ui.view" id="wizard_create_rr_applicant_view">
        <field name="name">wizard.create.rr.applicant Form</field>
        <field name="model">wizard.create.rr.applicant</field>
        <field name="arch" type="xml">
            <form string="Recruitment Request">
                <sheet>
                    <group>
                        <field name="applicant_id" attrs="{'readonly':[('type','=','applicant')]}"/>
                        <field name="recruitment_request_id" attrs="{'readonly':[('type','=','rr')]}"/>
                        <field name="type" readonly="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="create_new_rr_applicant" type="object" string="Save"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>