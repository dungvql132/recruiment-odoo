<odoo>
    <record model="ir.ui.view" id="wizard_change_state_rr_from">
        <field name="name">wizard.change.state.rr Form</field>
        <field name="model">wizard.change.state.rr</field>
        <field name="arch" type="xml">
            <form string="Recruitment Request">
                <sheet>
                    <group>
                        <field name="recruitment_request_id"/>
                        <field name="state"/>
                        <field name="reason_change_state"/>
                    </group>

                </sheet>
                <footer>
                    <button name="change_state" type="object" string="Save" class="btn btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="wizard_set_onboard_from">
        <field name="name">wizard.set.onboad.rr Form</field>
        <field name="model">wizard.set.onboad.rr</field>
        <field name="arch" type="xml">
            <form string="Set On Board">
                <sheet>
                    <group>
                        <field name="rr_applicant_id" readonly="1"/>
                        <field name="on_board_date"/>
                    </group>

                </sheet>
                <footer>
                    <button name="set_onboard" type="object" string="Save" class="btn btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>